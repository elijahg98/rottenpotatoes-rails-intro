-#  This file is app/views/movies/index.html.haml
%h2 All Movies (Elijah)

%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %th{:class => @movie_header}= link_to "Movie Title", movies_path(:sort_method => 'title')
      %th Rating
      %th{:class => @date_header}= link_to "Release Date", movies_path(:sort_method => 'release_date')
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
